.side_bar
  .side_header
    .side_header__user
      .side_header__user__name
        = current_user.name
      .side_header__user__icon
        = link_to new_group_path do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')

  .group_list
    - current_user.groups.each do |group|
      .group_list__box
        = link_to group_messages_path(group) do
          .group_list__box__name
            = group.name
          .group_list__box__message
